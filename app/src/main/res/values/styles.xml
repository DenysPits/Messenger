<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Messenger.Toolbar.Primary" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?appBarBackgroundColor</item>
        <item name="titleTextColor">?appBarForegroundColor</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">?bottomLineEditText</item>
        <item name="colorControlActivated">?blue</item>
        <item name="android:textColorHighlight">?textHighlightColor</item>
        <item name="android:textColorHint">?placeholderColor</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="EditTextChatTheme">
        <item name="colorControlActivated">?blue</item>
        <item name="android:textColorHighlight">?textHighlightColor</item>
    </style>

    <style name="MyMessage">
        <item name="messageBackground">@drawable/my_message_shape</item>
        <item name="messageBias">0.99</item>
        <item name="messageTextColor">?white</item>
        <item name="messageTimeColor">?myMessageTimeColor</item>
    </style>

    <style name="CompanionMessage">
        <item name="messageBackground">@drawable/companion_message_shape</item>
        <item name="messageBias">0.01</item>
        <item name="messageTextColor">?plainTextColor</item>
        <item name="messageTimeColor">?companionMessageTimeColor</item>
    </style>
</resources>